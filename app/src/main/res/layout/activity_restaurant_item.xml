<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/restaurantCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:clickable="true"
    android:elevation="190dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:outlineAmbientShadowColor="@color/colorPrimary"
    android:outlineSpotShadowColor="@color/colorPrimary"
    app:cardCornerRadius="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/restaurantImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginRight="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/restaurantlarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="15dp">

            <TextView
                android:id="@+id/restaurantNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/poppinsmedium"
                android:lineHeight="@dimen/cardview_default_elevation"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:paddingRight="8dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/restaurantCuisineTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/poppinsmedium"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:paddingRight="8dp"
                android:textColor="#1F1F1F"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/restaurantAddressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:paddingLeft="5dp"
                android:textColor="#1F1F1F"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/proximityTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="150dp"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="bottom"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>