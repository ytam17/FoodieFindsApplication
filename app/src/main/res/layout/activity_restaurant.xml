<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantDetails">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:scrollbars="none"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:id="@+id/toolbar"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/menubtn"
                        android:layout_width="45dp"
                        android:src="@drawable/mainmenu"
                        android:layout_height="50dp"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile"
                        android:layout_width="45dp"
                        android:layout_alignParentRight="true"
                        android:layout_height="45dp"
                        android:src="@drawable/user"
                        app:civ_border_width="2dp"
                        android:elevation="2dp"
                        app:civ_border_color="#f1f1f1"/>

                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="130dp"
                android:layout_height="142dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/restaurant_image"
                android:src="@drawable/restaurantlarge" />

            <TextView
                android:id="@+id/nameTextView"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="135dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000" />
                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/sunHoursTextViewLabel"
                        android:text="@string/sun_time"
                        android:textSize="12dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginLeft="270dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/sunHoursTextView"
                        android:layout_toRightOf="@id/sunHoursTextViewLabel"
                        android:layout_toEndOf="@id/sunHoursTextViewLabel"
                        android:layout_marginTop="60dp"
                        android:layout_marginLeft="270dp"
                        android:layout_marginStart="7dp"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/monHoursTextViewLabel"
                        android:text="@string/mon_time"
                        android:layout_marginTop="72dp"
                        android:layout_marginLeft="270dp"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/monHoursTextView"
                        android:layout_toRightOf="@id/monHoursTextViewLabel"
                        android:layout_toEndOf="@id/monHoursTextViewLabel"
                        android:layout_marginTop="72dp"
                        android:layout_marginLeft="270dp"
                        android:layout_marginStart="7dp"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tueHoursTextViewLabel"
                        android:text="@string/tue_time"
                        android:layout_marginTop="84dp"
                        android:layout_marginLeft="270dp"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tueHoursTextView"
                        android:layout_toRightOf="@id/tueHoursTextViewLabel"
                        android:layout_toEndOf="@id/tueHoursTextViewLabel"
                        android:layout_marginTop="84dp"
                        android:layout_marginLeft="270dp"
                        android:layout_marginStart="7dp"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/wedHoursTextViewLabel"
                        android:text="@string/wed_time"
                        android:layout_marginTop="96dp"
                        android:layout_marginLeft="270dp"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/wedHoursTextView"
                        android:layout_toRightOf="@id/wedHoursTextViewLabel"
                        android:layout_toEndOf="@id/wedHoursTextViewLabel"
                        android:layout_marginTop="96dp"
                        android:layout_marginLeft="270dp"
                        android:layout_marginStart="7dp"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/thuHoursTextViewLabel"
                        android:text="@string/thu_time"
                        android:layout_marginTop="108dp"
                        android:layout_marginLeft="270dp"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/thuHoursTextView"
                        android:layout_toRightOf="@id/thuHoursTextViewLabel"
                        android:layout_toEndOf="@id/thuHoursTextViewLabel"
                        android:layout_marginTop="108dp"
                        android:layout_marginLeft="270dp"
                        android:layout_marginStart="7dp"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/friHoursTextViewLabel"
                        android:text="@string/fri_time"
                        android:layout_marginTop="120dp"
                        android:layout_marginLeft="270dp"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/friHoursTextView"
                        android:layout_toRightOf="@id/friHoursTextViewLabel"
                        android:layout_toEndOf="@id/friHoursTextViewLabel"
                        android:layout_marginTop="120dp"
                        android:layout_marginLeft="270dp"
                        android:layout_marginStart="7dp"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/satHoursTextViewLabel"
                        android:text="@string/sat_time"
                        android:layout_marginTop="132dp"
                        android:layout_marginLeft="270dp"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/satHoursTextView"
                        android:layout_toRightOf="@id/satHoursTextViewLabel"
                        android:layout_toEndOf="@id/satHoursTextViewLabel"
                        android:layout_marginTop="132dp"
                        android:layout_marginLeft="270dp"
                        android:layout_marginStart="7dp"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            <TextView
                android:id="@+id/addressTextView"
                android:textSize="12sp"
                android:layout_below="@id/nameTextView"
                android:layout_marginLeft="135dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/ratingTextViewLabel"
                    android:text="@string/rating_colon"
                    android:layout_marginTop="60dp"
                    android:layout_below="@id/addressTextView"
                    android:layout_marginLeft="135dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/ratingTextView"
                    android:text="@string/no_ratings"
                    android:layout_toRightOf="@id/ratingTextViewLabel"
                    android:layout_toEndOf="@id/ratingTextViewLabel"
                    android:layout_below="@id/addressTextView"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="130dp"
                    android:layout_marginStart="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_below="@id/ratingTextViewLabel"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="130dp"
                    android:layout_width="wrap_content"
                    android:isIndicator="true"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="80dp"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/favourite"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp">

                        <ImageView
                            android:id="@+id/favoriteimage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="80dp"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:background="@drawable/menu"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="80dp"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:background="@drawable/reservation"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="80dp"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:background="@drawable/share"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/favoriteimageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:layout_toRightOf="@id/favoriteimage"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:text="Save\nFavorite"
                android:textColor="#000"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Menu"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#000"
                android:layout_marginLeft="45dp"
                android:textSize="12dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:text="Reservation"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:textColor="#000"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_width="wrap_content"
                android:text="Share"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="12dp"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:textColor="#000"
                android:layout_height="wrap_content"/>

        </LinearLayout>
            <TextView
                android:id="@+id/ReviewTextViewLabel"
                android:textSize="20sp"
                android:layout_below="@id/favoriteimageTextView"
                android:text="@string/reviews"
                android:fontFamily="@font/poppinsbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/all_reviews_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scrollbars="none" />
            <Button
                android:id="@+id/writeReviewButton"
                android:text="@string/write_review"
                android:layout_below="@id/all_reviews_recycler_view"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_below="@id/callButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/callButton"
                    android:text="@string/call"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:textColor="@android:color/white" />
                <Button
                    android:id="@+id/websiteButton"
                    android:text="@string/view_website"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:textColor="@android:color/white" />
            </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:id="@+id/navigationview"
        android:background="#9C27B0"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        android:layout_gravity="start"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header_layout"
        app:menu="@menu/nav_menu"
        />
</androidx.drawerlayout.widget.DrawerLayout>